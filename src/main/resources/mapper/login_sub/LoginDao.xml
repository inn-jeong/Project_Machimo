<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.project_machimo.login.Dao.LoginDao">
    <insert id="userInsert" parameterType="hashmap">
        insert into users(user_id,u_id,u_password,u_email,u_name,u_jumin,u_phone,u_address,u_nickname,u_social) values
        ((select nvl(max(user_id),0) from users)+1,
                #{u_id},#{u_password},#{u_email},
                #{u_name},#{u_jumin},#{u_phone},
                #{u_address},#{u_nickname},#{u_social}
                )
    </insert>

    <select id="findUser" resultType="com.example.project_machimo.login.Dto.UsersDto">
        select * from users where u_id=#{u_id}
    </select>
    <select id="findUserId" resultType="com.example.project_machimo.login.Dto.UsersDto">
            select * from users where u_social = #{u_social}
    </select>

        <select id="findMemPhone" resultType="com.example.project_machimo.login.Dto.UsersDto">
        select * from users where u_phone = #{u_phone}
    </select>
    <select id="findMemEmail" resultType="com.example.project_machimo.login.Dto.UsersDto">
        select * from users where u_email = #{u_email}
    </select>
</mapper>