<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.project_machimo.auction.dao.ProductsDAO">
    <update id="succeedsSale">

        UPDATE PRODUCTS
        SET p_sales_status =1
        where P_DUR  <![CDATA[<=]]>  #{param1}

    </update>
    <update id="failedSale">
        UPDATE PRODUCTS
        SET p_sales_status =2
        where P_DUR  <![CDATA[<=]]>  #{param1} AND PRODUCTS_id = #{param2}
    </update>

    <select id="pList" resultType="com.example.project_machimo.auction.dto.ProductsDTO">
        select * from products
    </select>
    <select id="pView" resultType="com.example.project_machimo.auction.dto.ProductsDTO">
        select * from products where products_id = #{0}
    </select>
</mapper>

