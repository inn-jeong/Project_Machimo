<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.project_machimo.review.dao.CommentMapper">
    <!-- tb_comment 테이블 전체 컬럼 -->
    <sql id="commentColumns">
        id
        , review_id
        , content
        , writer
        , delete_yn
        , created_date
        , modified_date
    </sql>


    <!-- 댓글 저장 -->
    <insert id="save" parameterType="com.example.project_machimo.review.dto.CommentRequest" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO c_review (
        <include refid="commentColumns" />
        ) VALUES (
        #{id}
        , #{reviewId}
        , #{content}
        , #{writer}
        , 0
        , SYSDATE
        , NULL
        )
    </insert>


    <!-- 댓글 상세정보 조회 -->
    <select id="findById" parameterType="long" resultType="com.example.project_machimo.review.dto.CommentResponse">
        SELECT
        <include refid="commentColumns" />
        FROM
        c_review
        WHERE
        id = #{value}
    </select>


    <!-- 댓글 수정 -->
    <update id="update" parameterType="com.example.project_machimo.review.dto.CommentRequest">
        UPDATE c_review
        SET
        modified_date = NOW()
        , content = #{content}
        , writer = #{writer}
        WHERE
        id = #{id}
    </update>


    <!-- 댓글 삭제 -->
    <delete id="deleteById" parameterType="long">
        UPDATE c_review
        SET
        delete_yn = 1
        WHERE
        id = #{id}
    </delete>


    <!-- 댓글 리스트 조회 -->
    <select id="findAll" parameterType="long" resultType="com.example.project_machimo.review.dto.CommentResponse">
        SELECT
        <include refid="commentColumns" />
        FROM
        c_review
        WHERE
        delete_yn = 0
        AND review_id = #{value}
        ORDER BY
        id DESC
    </select>
</mapper>