<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.project_machimo.review.dao.ReviewDao">
    <insert id="write" parameterType="hashmap">
        insert into REVIEW(review_id, products_id, users_id, review_title, review_content, review_star, review_img) values
<!--        (REVIEW_SEQ.NEXTVAL,#{products_id},#{users_id},#{review_title},#{review_content},#{review_star},#{review_img})-->
        (#{reviewId}, #{productsId}, #{reivewWritter}, #{reviewTitle}, #{reviewContent}, #{reviewStar}, #{reviewImg})
    </insert>

    <update id="modify" parameterType="hashmap">
        update REVIEW set review_title = #{reviewTitle}, review_content = #{reviewContent}
        , review_star = #{reviewStar}, review_img = #{reviewImg}
        where review_id=#{reviewId}
    </update>

    <delete id="delete" parameterType="hashmap">
        delete REVIEW where review_id=#{reviewId}
    </delete>

    <select id="list" resultType="com.example.project_machimo.review.dto.ReviewDto">
        select * from REVIEW
    </select>

    <select id="contentView" parameterType="hashmap" resultType="com.example.project_machimo.review.dto.ReviewDto">
        select * from REVIEW where review_id=#{reviewId}
    </select>

<!--    useGeneratedKeys 옵션을 true로 설정하면 생성된 게시글의 PK가 parameterType에 선언된 요청 객체(params)에 저장되며, keyProperty에 선언된 id에 값이 매핑(바인딩)됩니다.-->
<!--    <insert id="save" parameterType="com.study.domain.post.PostRequest" useGeneratedKeys="true" keyProperty="id">-->
</mapper>
